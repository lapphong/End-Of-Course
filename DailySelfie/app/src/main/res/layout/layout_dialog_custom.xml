<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/bg_white_corner"
    android:layout_margin="10dp"
    android:layout_height="wrap_content">

    <TextView
        android:background="@drawable/bg_blue_corner"
        android:textColor="@color/white"
        android:padding="10dp"
        android:gravity="center"
        android:textSize="18dp"
        android:text="Thông báo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:text="Bạn có chắc sử dụng hình ảnh đã chụp ?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:weightSum="5"
        android:orientation="horizontal"
        android:padding="5dp"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textColor="@color/white"
            android:id="@+id/btnDongY"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="@drawable/bg_blue_corner10"
            android:text="đồng ý" />

        <Button
            android:textColor="#CCC9C9"
            android:background="@drawable/bg_grey_corner10"
            android:id="@+id/btnBoQua"
            android:layout_marginLeft="15dp"
            android:layout_weight="3"
            android:text="bỏ qua/Chụp lại"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>